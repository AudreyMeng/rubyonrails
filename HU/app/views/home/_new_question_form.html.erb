<!-- Modal -->
<div class="modal fade" id="questionModal" tabindex="-1" role="dialog" aria-labelledby="questionModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="questionModalLabel">New Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <!--
        wrap up both the body with inputs and footer with buttons in the form

        <form class="form-horizontal" action="/questions" method="POST">
        action + method defines a route of the verb (POST) to the url (question) which will get routed in routes.rb

        form_for helper generates both the form and a valid authentication token
      -->
      <%= form_for :question, url: '/questions', html: {class:'form-horizontal'} do %>
        <div class="modal-body">
          <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <!--
                question[email] & question[body] will form a array question {email, body}
              -->
              <input type="email" name="question[email]" class="form-control" id="questionEmail" placeholder="Email" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputQuestion" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <textarea class="form-control" name="question[body]" id="questionContent" placeholder="What would you like to know" required></textarea>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <!--
            button type is submit to submit all inputs
          -->
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>